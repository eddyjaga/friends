<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <div class="ms-xl-4">
          <h1 class="pt-5"><i class="bi bi-people"></i> Friend</h1>
        </div>
        <% if notice || alert %>
          <%= render 'layouts/alert'%>
        <% end %>
        <div class="d-flex align-items-center px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

            <div class="form-outline mb-4">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
            </div>

            <div class="form-outline mb-4">
              <%= form.label :password, class: "form-label" %>
              <%= form.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-outline mb-4">
                <%= form.check_box :remember_me %>
                <%= form.label :remember_me %>
              </div>
            <% end %>

            <div class="pt-1 mb-4 d-grid">
              <%= form.submit "Login", class: "btn btn-info btn-lg" %>
            </div>

            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <p class="small mb-5 pb-lg-2"><%= link_to "Forgot password?", new_password_path(resource_name), class: "text-muted" %></p>
            <% end %>

            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <p>Don't have an account? <%= link_to "Register here", new_registration_path(resource_name) %></p>
            <% end %>

          <% end %>

        </div>

      </div>
      <div class="col-sm-6">
        <img src="/assets/img3.webp"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>