<p style="color: green"><%= notice %></p>
<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5"><%= @friend.first_name %> <%= @friend.last_name %></h1>
    <p class="fw-lighter"><i class="bi bi-envelope"></i> <%= @friend.email %>  |  <i class="bi bi-phone"></i> <%= @friend.phone %> | <i class="bi bi-twitter"></i> <%= @friend.twitter %></p>
    <hr>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <%= link_to '<i class="bi bi-pencil"></i> Edit'.html_safe, edit_friend_path(@friend), class: "btn btn-outline-success" %>
      <%= link_to '<i class="bi bi-arrow-left"></i> Back'.html_safe, friends_path, class: "btn btn-outline-secondary"  %>
    </div>
  </div>
</div>
